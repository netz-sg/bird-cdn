# ========================================
# üê¶ Bird-CDN Production Configuration
# ========================================
# Diese Datei auf dem Server als .env speichern!
# ========================================

# ========================================
# CDN Configuration (WICHTIG!)
# ========================================
CDN_DOMAIN=cdn.sg-netz.de
CDN_PROTOCOL=https
CDN_CACHE_SIZE=50g
CDN_CACHE_INACTIVE=30d

# ========================================
# Let's Encrypt SSL
# ========================================
LETSENCRYPT_EMAIL=your-email@example.com
LETSENCRYPT_STAGING=false

# ========================================
# MinIO (Origin Storage)
# ========================================
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=adminpassword123
MINIO_ENDPOINT=origin-storage:9000

# ========================================
# Database
# ========================================
DATABASE_URL=postgresql://cdn:cdn123@postgres:5432/cdn

# ========================================
# Redis
# ========================================
REDIS_URL=redis://redis:6379

# ========================================
# Backend API
# ========================================
API_SECRET_KEY=change-this-in-production-very-secret-key-12345
JWT_SECRET=change-this-jwt-secret-key-for-production-67890

# ========================================
# Grafana
# ========================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
